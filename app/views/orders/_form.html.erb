<!-- START:explanation -->
<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
<!-- START_HIGHLIGHT -->
      <h2><%= t('errors.template.header', :count=>@order.errors.size,
        :model=>t('activerecord.models.order')) %>.</h2>
      <p><%= t('errors.template.body') %></p>
<!-- END_HIGHLIGHT -->

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
<!-- START:raw -->
        <li><%= raw msg %></li>
<!-- END:raw -->
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name,t('.name')+":" %><br />
    <%= f.text_field :name,:size=>40 %>
  </div>
  
  <div>
    <%= f.label :address,t('.address')+":" %><br />
    <%= f.text_area :address,:row=>3,:cols=>40 %>
  </div>
  
  <div>
    <%= f.label :email,t('.email')+":" %><br />
    <%= f.text_field :email,:size=>40 %>
  </div>
  
  <div>
    <%= f.label :pay_type,t('.pay_type')+":" %><br />
    <%= f.select :pay_type,Order::PAYMENT_TYPES,:prompt=>t('.pay_prompt') %>
  </div>
  
  <div>
    <%= f.submit t('.submit') %>
  </div>
<% end %>
